# Maintainer: Mikkel Oscar Lyderik <mikkeloscar at gmail dot com>

pkgname=g++-arm-linux-gnueabihf-bin
_basever=4.8
pkgver=${_basever}.1
_ubuntuver=${pkgver}-10ubuntu7cross0.10
pkgrel=1
pkgdesc="The GNU C++ compiler for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/g++-arm-linux-gnueabihf"
license=('GPL2')
depends=('binutils-arm-linux-gnueabihf-bin' 'cpp-arm-linux-gnueabihf-bin' 'libgcc-dev-armhf-cross-bin')
provides=('g++-arm-linux-gnueabihf')
conflicts=('g++-arm-linux-gnueabihf')

if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/g++-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_i386.deb")
    md5sums=('71692c129b10d8449e12a5c1164507e0')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/g++-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_amd64.deb")
    md5sums=('5a55561aa4b3fca2d0d5ec8fc69b6239')
fi

package() {
    cd $pkgdir
    tar xfz "$srcdir/data.tar.gz"
    cd usr/bin
    ln -s arm-linux-gnueabihf-g++-${_basever} arm-linux-gnueabihf-g++
}
