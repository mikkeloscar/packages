# Maintainer: Mikkel Oscar Lyderik <mikkeloscar at gmail dot com>

pkgname=g++-arm-linux-gnueabihf-bin
_basever=4.8
pkgver=${_basever}.2
_ubuntuver=${pkgver}-16ubuntu4cross0.11
pkgrel=1
pkgdesc="The GNU C++ compiler for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/g++-arm-linux-gnueabihf"
license=('GPL2')
depends=('binutils-arm-linux-gnueabihf-bin' 'cpp-arm-linux-gnueabihf-bin' 'libgcc-dev-armhf-cross-bin')
provides=('g++-arm-linux-gnueabihf')
conflicts=('g++-arm-linux-gnueabihf')

if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/main/g/gcc-${_basever}-armhf-cross/g++-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_i386.deb")
    md5sums=('b798e597fab883558e96dc66fbd8fce2')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/main/g/gcc-${_basever}-armhf-cross/g++-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_amd64.deb")
    md5sums=('f5a3fb1964be9b5add1745d9bc08fc31')
fi

package() {
    cd $pkgdir
    tar xf $srcdir/data.tar.xz
    cd usr/bin
    ln -s arm-linux-gnueabihf-g++-${_basever} arm-linux-gnueabihf-g++
}
