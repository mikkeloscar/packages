pkgname=bcmdhd-fw
pkgver=0.1
pkgrel=1
pkgdesc="Firmware for the bcmdhd wireless driver (used in Cubietruck)."
arch=(any)
license=('unknown')
source=("http://arch.moscar.net/bin/ap6210.tar.xz")
noextract=("ap6210.tar.xz")
md5sums=('f36f0a34ade7083e33aa0585c300b7dd')

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/lib/firmware/"
  tar xf ap6210.tar.xz -C "${pkgdir}/usr/lib/firmware/"
}
