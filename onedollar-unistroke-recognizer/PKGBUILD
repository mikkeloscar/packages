# Maintainer: Mikkel Oscar Lyderik <mikkeloscar at gmail dot com>

_realname=reacTIVision
pkgname=onedollar-unistroke-recognizer
pkgver=1.0.2
pkgrel=1
pkgdesc="Implementation of the \$1 Gesture Recognizer, a two-dimensional template based gesture recognition, for Processing."
arch=('i686' 'x86_64')
url="https://github.com/nok/onedollar-unistroke-recognizer"
license=('GPL')
makedepends=('unzip')
depends=('processing')
_source="OneDollarUnistrokeRecognizer.zip"
source=("https://raw.githubusercontent.com/nok/onedollar-unistroke-recognizer/master/download/${_source}")
noextract=(${_source})
md5sums=('b2db90a335d689b8b3f0df520f3e7a60')

package() {
    cd "${srcdir}"
    mkdir -p "${pkgdir}/usr/share/processing/modes/java/libraries/"
    unzip ${_source} -d "${pkgdir}/usr/share/processing/modes/java/libraries"
}
