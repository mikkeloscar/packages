# Maintainer: Mikkel Oscar Lyderik <mikkeloscar at gmail dot com>

pkgname=binutils-arm-linux-gnueabihf-bin
pkgver=2.24
_ubuntuver=${pkgver}-1ubuntu1cross1.97
pkgrel=1
pkgdesc="GNU binary utilities, for arm-linux-gnueabihf target"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/binutils-arm-linux-gnueabihf"
license=('GPL2')
provides=('binutils-arm-linux-gnueabihf')
conflicts=('binutils-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/b/binutils-armhf-cross/binutils-arm-linux-gnueabihf_${_ubuntuver}_i386.deb")
    md5sums=('65c0f96901f77ec960a43d4d9d5c56b0')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/b/binutils-armhf-cross/binutils-arm-linux-gnueabihf_${_ubuntuver}_amd64.deb")
    md5sums=('8ed7d69b7efcd2dfb2f7596b0481919f')
fi

package() {
    cd $pkgdir
    tar xJf $srcdir/data.tar.xz

    # fix permissions
    chmod 755 $pkgdir/usr
    chmod 755 $pkgdir/usr/share
    chmod 755 $pkgdir/usr/bin
}
