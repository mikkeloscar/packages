pkgname=cpp-arm-linux-gnueabihf-bin
_basever=4.8
pkgver=${_basever}.1
_ubuntuver=${pkgver}-10ubuntu7cross0.10
pkgrel=1
pkgdesc="The GNU C preprocessor (cpp) for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/cpp-arm-linux-gnueabihf"
license=('GPL2')
depends=('cloog-ppl' 'libmpc09')
provides=('cpp-arm-linux-gnueabihf')
conflicts=('cpp-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/cpp-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_i386.deb")
    md5sums=('9d3256249c8423fe3442fe343360d0f1')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/cpp-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_amd64.deb")
    md5sums=('bef9102300268fc51becb42d9c955476')
fi

package() {
    cd $pkgdir
    tar xf $srcdir/data.tar.gz
}
