# Maintainer: Mikkel Oscar Lyderik <mikkeloscar at gmail dot com>

pkgname=gcc-arm-linux-gnueabihf-bin
_basever=4.8
pkgver=${_basever}.1
_ubuntuver=${pkgver}-10ubuntu7cross0.10
pkgrel=1
pkgdesc="The GNU C compiler for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/gcc-arm-linux-gnueabihf"
license=('GPL2')
depends=('binutils-arm-linux-gnueabihf-bin' 'cpp-arm-linux-gnueabihf-bin' "libgcc-dev-armhf-cross-bin")
provides=('gcc-arm-linux-gnueabihf')
conflicts=('gcc-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/gcc-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_i386.deb")
    md5sums=('42976f939560fc31f1dd78b983992888')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-${_basever}-armhf-cross/gcc-${_basever}-arm-linux-gnueabihf_${_ubuntuver}_amd64.deb")
    md5sums=('6b6353222a24661fef151fb3f91a133c')
fi

package() {
    cd $pkgdir
    tar xf $srcdir/data.tar.gz
    cd usr/bin
    ln -s arm-linux-gnueabihf-gcc-${_basever} arm-linux-gnueabihf-gcc
    ln -s arm-linux-gnueabihf-gcov-${_basever} arm-linux-gnueabihf-gcov
}
