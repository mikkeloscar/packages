pkgname=etcd
pkgver=3.1.7
pkgrel=1
pkgdesc='A highly-available key value store for shared configuration and service discovery.'
arch=('x86_64' 'i686' 'armv6h' 'armv7h')
url='https://github.com/coreos/etcd'
license=('Apache')
makedepends=('go' 'glide')
backup=('etc/etcd/etcd.conf.yml')
install="${pkgname}.install"
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/coreos/${pkgname}/archive/v${pkgver}.tar.gz"
        "https://github.com/coreos/${pkgname}/raw/v${pkgver}/contrib/systemd/${pkgname}.service"
        "https://github.com/coreos/${pkgname}/raw/v${pkgver}/${pkgname}.conf.yml.sample")
sha1sums=('e23906274da0285d5dd8a1db8c6e57232924defa'
          'c32441eb5bc24e081db746a57352154b5ac6e70f'
          '636d0338fba60f4ea69364f596cdbb094d44a03d')

prepare() {
  # setup local gopath
  mkdir -p $srcdir/src/github.com/coreos
  ln -s $srcdir/${pkgname}-${pkgver} $srcdir/src/github.com/coreos/$pkgname

  cd $srcdir/src/github.com/coreos/$pkgname

  GOPATH="$srcdir" glide install --strip-vendor
  # PATH=$PATH:$GOPATH/bin make deps
  # GOPATH="$srcdir" PATH=$PATH:$GOPATH/bin make gen
  # cd ${srcdir}/${pkgname}-${pkgver}
  # export GOPATH="$(pwd)/_gopath"
  # _COREOS="${GOPATH}/src/github.com/coreos"
  # mkdir -p "${_COREOS}"
  # ln -sf ${srcdir}/${pkgname}-${pkgver} "${_COREOS}/etcd"
  # glide install --strip-vendor
}

build() {
  cd $srcdir/src/github.com/coreos/$pkgname
  GOPATH="$srcdir" ./build
  # PATH=$PATH:$GOPATH/bin go build -tags netgo -ldflags '-extldflags "-static"' -o drone-bin github.com/drone/drone/drone
  # cd ${srcdir}/${pkgname}-${pkgver}
  # export GOPATH="$(pwd)/_gopath"
  # _COREOS="${GOPATH}/src/github.com/coreos"
  # mkdir -p "${_COREOS}"
  # ln -sf ${srcdir}/${pkgname}-${pkgver} "${_COREOS}/etcd"
  # glide install --strip-vendor
  # # Note: this script may produce no output
  # bash -x ./build
}

package() {
  cd $srcdir
  install -Dm644 ${pkgname}.conf.yml.sample $pkgdir/etc/etcd/$pkgname.conf.yml
  install -Dm644 ${pkgname}.service $pkgdir/usr/lib/systemd/system/$pkgname.service
  install -Dm755 ${pkgname}-${pkgver}/bin/etcd $pkgdir/usr/bin/etcd
  install -Dm755 ${pkgname}-${pkgver}/bin/etcdctl $pkgdir/usr/bin/etcdctl
  install -Dm644 ${pkgname}-${pkgver}/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -dm755 $pkgdir/usr/share/doc/$pkgname
  install -m644 ${pkgname}-${pkgver}/Documentation/*.md -t $pkgdir/usr/share/doc/$pkgname
}

